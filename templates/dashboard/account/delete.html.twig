{% extends 'dashboard/account/_layout.html.twig' %}

{% block title %}{{ 'account.delete.breadcrumb'|trans }}{% endblock %}

{% block main %}
    <twig:Header title="{{ 'account.delete.confirmation_title'|trans }}">
        <a href="{{ path('dashboard.account') }}" class="button button-danger">
            {{ 'account.delete.cancel'|trans }}
        </a>
    </twig:Header>

    <twig:Card>
        <twig:CardBody>
            <p class="text-white">{{ 'account.delete.confirmation_description'|trans }}</p>
            <br/>
            {{ form(form) }}
        </twig:CardBody>
    </twig:Card>
{% endblock %}