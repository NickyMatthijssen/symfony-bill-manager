{% extends 'dashboard/account/_layout.html.twig' %}

{% block main %}
    <twig:Card>
        <twig:CardHeader title="{{ 'account.security_settings.password.title'|trans }}">
            {% block action %}
                <a href="{{ path('dashboard.account') }}" class="button button-danger">
                    {{ 'account.security_settings.password.cancel'|trans }}
                </a>
            {% endblock %}
        </twig:CardHeader>

        <twig:CardBody>
            {{ form(form) }}
        </twig:CardBody>
    </twig:Card>
{% endblock %}